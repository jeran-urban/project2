{{> headerUser}}
<div class= "container">
  <div class="row">
    <div class="col-lg-3 text">
      <h2 class= "text">Welcome {{user.name}}<span class="member-name"></span></h2>
      <h4 class="text"> # of Movies Reviewed : </h4>
      <h4 class="text"> Favorite Genre : </h4>
      <h4 class="text"> Favorite Director : </h4>
      <h4 class="text"> Favorite Critic : </h4>
    </div>
    <div class="col-lg-9">
      <h2 class= "text"> Your Reccomendations</h2>
      <div class= "display">
        {{#each photoLike}}
          <div class= "connect">
            <img src= "{{poster}}" class="rec float">
            <div class= "options">
              <button type="button" class="liked btn btn-success btn-lg" id="{{tmdbId}}" value="like"><i class="fa fa-thumbs-up"></i></button>
              <button type="button" class="notseen btn btn-warning btn-lg" id="{{tmdbId}}" value="pass"><i class="fa fa-chevron-right"></i></button>
              <button type="button" class="disliked btn btn-danger btn-lg" id="{{tmdbId}}" value="dislike"><i class="fa fa-thumbs-down"></i></button>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class= "row">
    <div class="col-lg-12">
      <h2 class= "text"> Movies You Liked </h2>
      <div class= "display">
        {{#each photoLike}}
          <div class= "connect">
            <img src="{{poster}}" class="sizing float">
            <div class= "options">
              <button type="button" class="liked btn btn-success btn-lg" id="{{tmdbId}}" value="like"><i class="fa fa-thumbs-up"></i></button>
              <button type="button" class="notseen btn btn-warning btn-lg" id="{{tmdbId}}" value="pass"><i class="fa fa-chevron-right"></i></button>
              <button type="button" class="disliked btn btn-danger btn-lg" id="{{tmdbId}}" value="dislike"><i class="fa fa-thumbs-down"></i></button>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class= "row">
    <div class="col-lg-12">
      <h2 class= "text"> Movies You Disliked </h2>
      <div class= "display">
        {{#each photoDislike}}
          <div class= "connect">
            <img src="{{poster}}" class="sizing float">
            <div class= "options">
              <button type="button" class="liked btn btn-success btn-lg" id="{{tmdbId}}" value="like"><i class="fa fa-thumbs-up"></i></button>
              <button type="button" class="notseen btn btn-warning btn-lg" id="{{tmdbId}}" value="pass"><i class="fa fa-chevron-right"></i></button>
              <button type="button" class="disliked btn btn-danger btn-lg" id="{{tmdbId}}" value="dislike"><i class="fa fa-thumbs-down"></i></button>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="js/profile.js"> </script>