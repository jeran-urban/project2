{{> headerUser}}

<h1 class="text-center">Search</h1>

<div class="container search-button">
  <div class="row">
    <div class="col-sm-6 col-xs-offset-2">
      <input class="form-control movie" type="text" placeholder="Enter a movie name">
    </div>
    <button class="btn btn-lg movie-submit">Search</button>
  </div>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <hr>
      <div id="movie-area"></div>
    </div>
  </div>
  <div class="row details">
    <div class="col-md-3">
      <img class="img-responsive moviePoster">
    </div>
    <div class="col-md-7 col-sm-offset-1">
      <p class="movieTitle"></p>
      <p class="movieYear"></p>
      <p class="movieGenre"></p>
      <p class="moviePlot"></p>
      <div class="col-md-6"> <p class="movieDirector">  </p></div>
      <div class="col-md-6"> <p class="movieCast"> </p></div>
      <div class="col-md-8 recs">
        <img class="rec1 movie-submit movie">
        <img class="rec2 movie-submit movie">
        <img class="rec3 movie-submit movie">
      </div>
      <div class="col-md-4">
        <div class="bs-example row">
          <!-- Button HTML (to Trigger Modal) -->
          <p id="sources"><a href="#sourcesModal" class="btn btn-md btn-primary view-sources" data-toggle="modal">View Sources</a></p>
        </div>
        <div class="bs-example row">
          <!-- Button HTML (to Trigger Modal) -->
          <p><a href="#trailerModal" class="btn btn-md btn-primary view-trailer" data-toggle="modal">View Trailer</a></p>
        </div>
      </div>
    </div>
  </div>

<!-- Trailer Modal -->
  <div id="trailerModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Trailer</h4>
        </div>
        <div class="modal-body">
            <iframe id="movieTrailer" width="560" height="315" frameborder="0" allowfullscreen></iframe>
        </div>
      </div>
    </div>
  </div>

<!-- Sources Modal -->
  <div id="sourcesModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">View Sources</h4>
        </div>
        <div class="modal-body">
          <table id="purchaseTable">
            <thead>
              <tr class="title">
                <th colspan="3">Purchase Sources</th>
              </tr>
              <tr>
                <th>Source</th>
                <th>Price</th>
                <th>Rent/Purchase</th>
              </tr>
            </thead>
            <tbody id="purchaseTableBody"></tbody>
          </table>

<!-- Table for when Purchase Sources do not exist -->
          <table id="noPurchaseTable" style="display: none">
            <thead>
              <tr class="title">
                <th colspan="6">No Purchase Sources</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
<!-- End -->

          <table id="streamingTable">
            <thead>
              <tr class="title">
                <th colspan="3">Streaming Sources</th>
              </tr>
              <tr>
                <th>Source</th>
              </tr>
            </thead>
            <tbody id="streamingTableBody"></tbody>
          </table>

<!-- Table for when Streaming Sources do not exist -->
            <table id="noStreamingTable" style="dislay: none">
              <thead>
                <tr class="title">
                  <th colspan="6">No Streaming Sources</th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
<!-- End -->

        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="js/search.js"> </script>
