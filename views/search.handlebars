{{> headerUser}}

<h1 class="text-center">Search</h1>

<!-- Search Bar -->
<div class="container search-button">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-2 text-center">
      <input class="form-control movie" type="text" placeholder="Enter a movie name">
    </div>
    <div class="col-xs-4 text-center">
      <button class="btn btn-lg movie-submit">Search</button>
    </div>
  </div>



<!-- Movie Data -->

  <div class="row details">
    <div class="col-xs-6">
      <img class="img-responsive moviePoster">
    </div>
    <div class="col-xs-6">
      <h2 class="movieTitle margin-botton"></h2>
      <h4 class="movieYear margin-bottom"></h4>
      <p class="movieGenre margin-bottom"></p>
      <p class="moviePlot margin-bottom"></p>
      <p class="movieDirector margin-bottom">  </p>
      <p class="movieCast margin-bottom"> </p>
      <button class="btn btn-primary btn-lg active view-sources"><a href="#sourcesModal" data-toggle="modal">View Sources</a></button>
      <button class="btn btn-primary btn-lg active view-trailer"><a href="#trailerModal" data-toggle="modal">View Trailer</a></button>
    </div>
  </div>

        <div class="row also-liked">
          <div>
            <h3 class="also-liked"></h3>
          </div>
        </div>
        <div class="row">
        <div class="col-xs-6 col-md-8 text-center recs">
          <img class="rec1 movie-submit movie">
          <img class="rec2 movie-submit movie">
          <img class="rec3 movie-submit movie">
        </div>
      </div>

    </div> <!-- Main Container -->



<!-- Trailer Modal -->
  <div id="trailerModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Trailer</h4>
        </div>
        <div class="modal-body">
            <iframe id="movieTrailer" width="560" height="315" frameborder="0" allowfullscreen></iframe>
        </div>
      </div>
    </div>
  </div>

<!-- Sources Modal -->
  <div id="sourcesModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">View Sources</h4>
        </div>
        <div class="modal-body">

<!-- Purchase Table inside Modal -->
          <table id="purchaseTable">
            <thead>
              <tr class="title">
                <th colspan="3" class="bg-primary">Purchase Sources</th>
              </tr>
              <tr>
                <th>Source</th>
                <th>Price</th>
                <th>Rent/Purchase</th>
              </tr>
            </thead>
            <tbody id="purchaseTableBody"></tbody>
          </table>

<!-- Table for when Purchase Sources do not exist -->
          <table class="bg-primary" id="noPurchaseTable" style="display: none">
            <thead>
              <tr class="title">
                <th colspan="6" class="bg-primary">No Purchase Sources</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
<!-- End -->

<!-- Streaming Table inside Modale -->
          <table id="streamingTable">
            <thead>
              <tr class="title">
                <th colspan="3" class="bg-primary">Streaming Sources</th>
              </tr>
              <tr>
                <th>Source</th>
              </tr>
            </thead>
            <tbody id="streamingTableBody"></tbody>
          </table>

<!-- Table for when Streaming Sources do not exist -->
            <table id="noStreamingTable" style="dislay: none">
              <thead>
                <tr class="title">
                  <th colspan="6" class="bg-primary">No Streaming Sources</th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
<!-- End -->

        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="js/search.js"> </script>
